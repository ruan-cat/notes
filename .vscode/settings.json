{
	// 需要使用prettier来便捷的格式化
	"prettier.enable": true,
	// markdown文件目前使用prettier来格式化
	"[markdown]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.formatOnSave": false,
	// Auto fix
	"editor.codeActionsOnSave": {
		// https://oxc.rs/docs/guide/usage/linter/editors.html#use-recommended-setup-for-teams
		"source.fixAll.oxc": "explicit",
		"source.organizeImports": "never"
	},
	"picgo": {
		"picBed": {
			"current": "github",
			"uploader": "github"
		}
	},
	"code-runner.executorMap": {
		"typescript": "tsx $fullFileName"
	},
	"todo-tree.tree.disableCompactFolders": false,
	"todo-tree.tree.showCountsInTree": true,
	"todo-tree.tree.showBadges": true,
	"vue.codeActions.enabled": false,
	"svn.ignoreMissingSvnWarning": true,
	// 尝试实现指定文本的屏蔽 但是无效
	"todo-tree.highlights.customHighlight": {
		"参考资料": {
			"type": "none"
		}
	},
	// 文件打开的默认行为
	"workbench.editorAssociations": {
		// "*.svg": "hediet.vscode-drawio-text",
		// "*.drawio.svg": "hediet.vscode-drawio",
		// 正常可用
		"*.drawio.svg": "hediet.vscode-drawio-text"
	},
	/** 
		让volar对md提供基础的类型支持
		- https://github.com/vuejs/language-tools/tree/master/extensions/vscode#configs
		- https://vitepress.dev/guide/using-vue#vs-code-intellisense-support
	*/
	"vue.server.includeLanguages": [
		"vue",
		"markdown"
	],
	/** 忽略特定的文件夹 不予搜索 */
	"search.exclude": {
		"**/dist": true,
		"**/.cache": true,
		"**/.temp": true,
		"**/.vercel": true,
		"**/.turbo": true,
		"**/cache": true
	},
	// 配置多根项目的目录地址 默认为项目根目录
	"terminal.integrated.cwd": "${workspaceFolder}",
	// 配置多根项目的目录地址 默认为项目根目录 且该配置仅在 .code-workspace 文件内生效
	"terminal.integrated.splitCwd": "workspaceRoot",
	/** 折叠 AI大模型记忆文件 */
	"explorer.fileNesting.patterns": {
		"CLAUDE.md": "GEMINI.md,AGENTS.md"
	}
}
