{
	"name": "@ruan-cat-docs/root",
	"private": true,
	"version": "1.0.0",
	"description": "笔记单仓根目录。",
	"license": "MIT",
	"type": "module",
	"packageManager": "pnpm@10.22.0",
	"engines": {
		"node": ">=22.14.0"
	},
	"scripts": {
		"up-taze": "pnpm -w up @ruan-cat/taze-config -L && npx taze -r",
		"build": "turbo do-build",
		"deploy": "turbo do-deploy",
		"git:dev-2-main": "git rebase dev main && pnpm run git:push",
		"git:main-2-dev": "git rebase main dev",
		"git:dev-2-vc": "git rebase dev vc && pnpm run git:push",
		"git:vc-2-dev": "git rebase vc dev",
		"clear:cache": "rimraf -g '**/{dist,.turbo,.vercel,.cache,.temp}'",
		"clear:deps": "rimraf -g '**/{node_modules,package-lock.json,pnpm-lock.yaml}'",
		"format": "prettier --experimental-cli --write .",
		"test": "vitest --ui --watch --api.port=4000",
		"todoctor": "todoctor",
		"preinstall": "npm run corepack:pnpm",
		"old-preinstall": "npx only-allow pnpm && npm run corepack:pnpm",
		"corepack:pnpm": "corepack enable && corepack install",
		"git:fetch": "git fetch -p",
		"git:push": "git push --follow-tags",
		"deploy-on-vercel": "tsx ./scripts/vercel-deploy-tool.ts",
		"on-github-action-flow": "pnpm run build",
		"ci": "pnpm run build",
		"build:docs:note": "turbo run do-build-note-doc",
		"build:docs:01star": "turbo run do-build-01star-doc"
	},
	"dependencies": {
		"@vercel/analytics": "^1.5.0",
		"@vueuse/core": "^13.9.0",
		"animate.css": "^4.1.1",
		"axios": "^1.13.2",
		"dayjs": "^1.11.19",
		"element-plus": "^2.11.7",
		"lodash-es": "^4.17.21",
		"node-localstorage": "^3.0.5",
		"pinia": "^3.0.4",
		"pinia-plugin-persistedstate": "^4.7.1",
		"uuid": "^11.1.0",
		"vue": "^3.5.24",
		"vue-json-excel3": "^1.0.30",
		"xlsx": "^0.18.5"
	},
	"devDependencies": {
		"@iconify/json": "^2.2.406",
		"@iconify/vue": "^5.0.0",
		"@prettier/plugin-oxc": "^0.0.4",
		"@ruan-cat/commitlint-config": "^4.3.0",
		"@ruan-cat/domains": "^1.7.0",
		"@ruan-cat/generate-code-workspace": "^0.6.0",
		"@ruan-cat/taze-config": "^0.3.0",
		"@ruan-cat/utils": "^4.16.0",
		"@ruan-cat/vercel-deploy-tool": "^0.12.0",
		"@shikijs/twoslash": "^3.15.0",
		"@shikijs/vitepress-twoslash": "^3.15.0",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^24.10.1",
		"@types/uuid": "^10.0.0",
		"@vitejs/plugin-vue": "^6.0.1",
		"@vitest/ui": "^3.2.4",
		"cross-env": "^7.0.3",
		"cz-git": "^1.12.0",
		"moment": "^2.30.1",
		"only-allow": "^1.2.1",
		"pkg-types": "^2.3.0",
		"prettier": "^3.6.2",
		"prettier-plugin-lint-md": "^1.0.1",
		"rimraf": "^6.1.0",
		"taze": "^19.9.0",
		"todoctor": "^1.3.5",
		"tsx": "^4.20.6",
		"turbo": "^2.6.1",
		"typedoc": "^0.28.14",
		"typedoc-plugin-markdown": "^4.9.0",
		"typescript": "^5.9.3",
		"unplugin-auto-import": "^20.2.0",
		"unplugin-vue-components": "^30.0.0",
		"vercel": "44.2.8",
		"vite": "^7.0.0",
		"vitest": "^3.2.4"
	}
}